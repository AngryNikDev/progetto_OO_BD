<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.Controller.EquipmentBuyingController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="70.0" vgrow="SOMETIMES" />
      <RowConstraints fillHeight="false" />
   </rowConstraints>
   <children>
      <StackPane style="-fx-background-color: #3c6e71;">
         <children>
            <Label fx:id="selectedProjectName" contentDisplay="CENTER" text="nome progetto" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="remainingFunds" contentDisplay="CENTER" text="Fondi" textFill="WHITE" StackPane.alignment="CENTER_RIGHT">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <StackPane.margin>
                  <Insets right="40.0" />
               </StackPane.margin>
            </Label>
         </children>
      </StackPane>
      <GridPane prefWidth="1000.0" GridPane.rowIndex="1">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="400.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="40.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="360.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" />
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox alignment="TOP_CENTER" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label contentDisplay="CENTER" text="Registra Acquisto" textFill="#3c6e71">
                     <font>
                        <Font name="System Bold" size="21.0" />
                     </font>
                  </Label>
                  <Label contentDisplay="CENTER" prefHeight="35.0" prefWidth="280.0" text="Indicare il prezzo d'acquisto del singolo componente." textAlignment="CENTER" textFill="#a8a8a8" wrapText="true">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <VBox prefHeight="24.0" prefWidth="400.0">
                     <children>
                        <Label fx:id="equipmentNameLabel" contentDisplay="CENTER" text="Articolo : ">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <VBox prefHeight="24.0" prefWidth="400.0">
                           <children>
                              <Label fx:id="techSpecsLabel" contentDisplay="CENTER" text="Specifiche :">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="quantityLabel" contentDisplay="CENTER" text="Quantità richiesta :">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <HBox prefHeight="41.0" prefWidth="400.0">
                     <children>
                        <Label contentDisplay="CENTER" text="Totale : €">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="totalPriceLabel">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="36.0" prefWidth="400.0" spacing="30.0">
                     <children>
                        <VBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="62.0" prefWidth="149.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Prezzo">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="priceTextField" maxWidth="1.7976931348623157E308" onKeyPressed="#updateTotalPrice" />
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </VBox>
                        <VBox maxWidth="1.7976931348623157E308">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
                  <FlowPane alignment="CENTER" columnHalignment="CENTER" maxWidth="1.7976931348623157E308" prefWidth="400.0">
                     <children>
                        <Button fx:id="buyEquipmentButton" mnemonicParsing="false" onAction="#buyEquipment" prefHeight="35.0" prefWidth="171.0" style="-fx-background-color: #3c6e71;" text="Conferma" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <FlowPane.margin>
                              <Insets right="30.0" />
                           </FlowPane.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="abortOperationButton" mnemonicParsing="false" onAction="#abortOperation" prefHeight="35.0" prefWidth="171.0" style="-fx-background-color: #A63C06;" text="Cancella" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </FlowPane>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="460.0" prefWidth="360.0" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <children>
                  <Label contentDisplay="CENTER" text="Log Acquisti ">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="labNameLabel" contentDisplay="CENTER" text="Laboratorio :">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TableView fx:id="EquipmentLog" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="360.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn prefWidth="115.0" text="Nome" />
                        <TableColumn prefWidth="115.0" text="Prezzo" />
                        <TableColumn prefWidth="129.0" text="Data Acquisto" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
</GridPane>
